@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department  @Model.Name Department</h1>

<div asp-validation-summary="All">
</div>

<form asp-action="Edit" asp-controller="Department">

    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="PartialViews/CreateEditDepartmentPartial" />

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-outline-info">Cancel</a>

</form>

@section ValidationScriptsSection
{
    <partial name="_ValidationScriptsPartial" />


