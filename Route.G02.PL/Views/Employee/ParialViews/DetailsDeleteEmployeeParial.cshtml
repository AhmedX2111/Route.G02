@model EmployeeViewModel

<div>
    <style>
        .employee-image-container {
            width: 100px; /* Set width to the desired size */
            height: 100px; /* Set height to the desired size */
            overflow: hidden; /* Hide any overflow from the image */
            border-radius: 50%; /* Make the container rounded */
            border: 2px solid #ccc; /* Add a border */
        }

        .employee-image {
            width: 100%; /* Make sure the image takes the full width of its container */
            height: auto; /* Maintain aspect ratio */
            display: block; /* Remove any default inline styles */
        }
    </style>

    <div class="employee-image-container">
        <img src="~/files/images/@Model.ImageName" alt="Employee Image" class="employee-image img-fluid rounded-circle" width="100" height="100" />
    </div>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Gender"></label>
    <input asp-for="Gender" class="form-control" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" readonly />
</div>
<div class="form-group">
    <input asp-for="IsActive" class="form-check-input" readonly />
    <label class="col-form-label" asp-for="IsActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" readonly />
</div>